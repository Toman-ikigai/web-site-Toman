---
const products = [
  { name: "Circuit Breaker", price: 49.99, image: "https://t4.ftcdn.net/jpg/01/70/12/39/360_F_170123920_wv1bdmkpE3FLUuBLPynZitGiJNdaYNTK.jpg" },
  { name: "PLC Controller", price: 299.99, image: "https://t4.ftcdn.net/jpg/01/70/12/39/360_F_170123920_wv1bdmkpE3FLUuBLPynZitGiJNdaYNTK.jpg" },
  { name: "Industrial Sensor", price: 79.99, image: "https://t4.ftcdn.net/jpg/01/70/12/39/360_F_170123920_wv1bdmkpE3FLUuBLPynZitGiJNdaYNTK.jpg" },
  { name: "Power Supply", price: 129.99, image: "https://t4.ftcdn.net/jpg/01/70/12/39/360_F_170123920_wv1bdmkpE3FLUuBLPynZitGiJNdaYNTK.jpg" },
];
---

<div class="bg-neutralC-black py-8">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-primaryC-yellow mb-6">Featured Products</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        products.map((product) => (
          <div class="bg-[#1E1E1E] rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
            <img
              src={product.image}
              alt={product.name}
              class="w-full h-48 object-cover"
            />
            <div class="p-4">
              <h3 class="text-white font-semibold text-lg mb-2">
                {product.name}
              </h3>
              <p class="text-primaryC-yellow font-bold">
                ${product.price.toFixed(2)}
              </p>
              <button class="mt-4 bg-primaryC-yellow text-black px-4 py-2 rounded hover:bg-[#FFA500] transition-colors">
                Add to Cart
              </button>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
