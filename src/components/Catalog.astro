---
const catalogItems = [
  {
    title: "Courses",
    description: "Expand your knowledge with our expert-led courses",
    image: "https://res.cloudinary.com/dvggwdqnj/image/upload/v1733957153/imagens/jvgyslcsigvkw6zclfo3.png",
  },
  {
    title: "Products",
    description: "Discover our range of innovative products",
    image: "https://res.cloudinary.com/dvggwdqnj/image/upload/v1733957153/imagens/yrbqokw6p11dzb25vzp6.png",
  },
  {
    title: "Monitoring",
    description: "Stay informed with our advanced monitoring solutions",
    image: "https://res.cloudinary.com/dvggwdqnj/image/upload/v1733957153/imagens/dgp0fr9xtpfgwbjlz3aw.png",
  },
  {
    title: "Projects",
    description: "Explore our successful project implementations",
    image: "https://res.cloudinary.com/dvggwdqnj/image/upload/v1733957153/imagens/sleu7flbtlmemdr7qir1.png",
  },
];
---

<section class="py-16 bg-neutralC-white" id="catalago">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-primaryC-black mb-12 text-center">
      Nuestro Catalogo
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        catalogItems.map((item, index) => (
          <div class="group relative overflow-hidden rounded-lg shadow-lg transition-transform duration-300 hover:scale-105">
            <div class="absolute inset-0 bg-gradient-to-b from-transparent to-primaryC-black opacity-70 transition-opacity duration-300 group-hover:opacity-90" />
            <img
              src={item.image}
              alt={item.title}
              class="w-full h-64 object-cover"
            />
            <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-2 transition-transform duration-300 group-hover:translate-y-0">
              <h3 class="text-2xl font-semibold text-neutralC-white mb-2">
                {item.title}
              </h3>
              <p class="text-neutralC-white text-sm opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                {item.description}
              </p>
            </div>
            <div class="absolute top-0 right-0 bg-secondaryC-orange text-neutralC-white text-xs font-bold px-3 py-1 m-2 rounded-full opacity-0 transition-opacity duration-300 group-hover:opacity-100">
              Explore
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .container {
    max-width: 1200px;
  }
</style>
