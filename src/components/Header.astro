<header
  id="main-header"
  class="bg-transparent text-white p-4 fixed w-full z-20 transition-colors duration-300"
>
  <div class="container mx-auto flex justify-between items-center">
    <img
      src="./logo.png"
      alt="Company Logo"
      class="w-28 h-auto object-cover rounded-lg"
    />
    <nav>
      <ul class="flex space-x-4 uppercase text-sm">
        <li>
          <a href="#services" class="hover:text-secondaryC-orange">INICIO</a>
        </li>
        <!-- <li>
          <a href="#projects" class="hover:text-secondaryC-orange">SERVICIOS</a>
        </li> -->
        <li>
          <a href="#catalog" class="hover:text-secondaryC-orange">PROYECTOS</a>
        </li>
        <li>
          <a href="#contact" class="hover:text-secondaryC-orange">CATALOGO</a>
        </li>
        <li>
          <a href="#about" class="hover:text-secondaryC-orange"
            >SOBRE NOSOTROS</a
          >
        </li>
        <li>
          <a href="#contact" class="hover:text-secondaryC-orange">CONTACTO</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const header = document.getElementById("main-header") as HTMLElement;

    window.addEventListener("scroll", () => {
      if (window.scrollY > window.innerHeight) {
        header.classList.remove("bg-transparent");
        header.classList.add("bg-black", "bg-opacity-50");
      } else {
        header.classList.remove("bg-black", "bg-opacity-50");
        header.classList.add("bg-transparent", "text-white");
      }
    });
  });
</script>
