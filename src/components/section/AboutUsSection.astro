---
import { getContentJsonLang } from "@/services/langJson";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const { valores, spot, informacion, mision, vision } = getContentJsonLang(
  "about",
  lang
);
const colors = {
  primaryC: {
    yellow: "#ffff00",
    black: "#2C2C2C",
  },
  secondaryC: {
    gray: "#4B4B4B",
    orange: "#FFA500",
  },
  neutralC: {
    white: "#FFFFFF",
    brown: "#D2B48C",
    lightGray: "#757575",
  },
};
---

<div
  id="about"
  class="flex flex-col items-center justify-center"
  style={{
    backgroundColor: colors.primaryC.black,
  }}
>
  {/* Spot o Mensaje Principal */}
  <div
    class="text-center w-full lg:w-10/12 m-auto mb-12 p-8 rounded-xl shadow-lg"
    style={{
      backgroundColor: colors.primaryC.yellow,
    }}
  >
    <h1
      class="md:text-4xl text-xl font-bold mb-4"
      style={{ color: colors.primaryC.black }}
    >
      {spot.title}
    </h1>
    <p class="md:text-3xl text-lg" style={{ color: colors.secondaryC.gray }}>
      {spot.content}
    </p>
  </div>

  {/* Sección de Información de la Empresa */}
  <div class="grid md:grid-cols-2 gap-8 max-w-6xl">
    {/* Columna de Descripción */}
    <div
      class="p-8 rounded-2xl space-y-6 shadow-lg transition-all duration-300 hover:scale-[1.02]"
      style={{
        backgroundColor: colors.primaryC.black,
        border: `2px solid ${colors.primaryC.yellow}`,
        borderRadius: "20px",
      }}
    >
      <h2
        class="text-4xl font-extrabold mb-6 text-center flex items-center justify-center gap-4"
        style={{ color: colors.primaryC.yellow }}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="40"
          height="40"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="16" x2="12" y2="12"></line>
          <line x1="12" y1="8" x2="12.01" y2="8"></line>
        </svg>
        {informacion.title}
      </h2>

      <div class="lg:grid lg:grid-cols-2 grid-col-1 gap-6 flex flex-col">
        <div class="md:col-span-2">
          <p
            class="text-base leading-relaxed"
            style={{ color: colors.neutralC.white }}
          >
            {informacion.content}
          </p>
        </div>
        <div
          class="p-6 rounded-xl space-y-4 transform transition-all duration-300 hover:scale-[1.03]"
          style={{
            backgroundColor: colors.neutralC.lightGray,
            border: `1px solid ${colors.primaryC.yellow}`,
          }}
        >
          <div class="flex items-center gap-3 mb-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke={colors.secondaryC.orange}
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="16"></line>
              <line x1="8" y1="12" x2="16" y2="12"></line>
            </svg>
            <h3
              class="text-2xl font-bold"
              style={{ color: colors.primaryC.yellow }}
            >
              {informacion.descripcion[0].title}
            </h3>
          </div>
          <p
            class="text-base leading-relaxed"
            style={{ color: colors.neutralC.white }}
            set:html={informacion.descripcion[0].descripcion}
          />
        </div>

        <div
          class="p-6 rounded-xl space-y-4 transform transition-all duration-300 hover:scale-[1.03]"
          style={{
            backgroundColor: colors.neutralC.lightGray,
            border: `1px solid ${colors.primaryC.yellow}`,
          }}
        >
          <div class="flex items-center gap-3 mb-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke={colors.secondaryC.orange}
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="16"></line>
              <line x1="8" y1="12" x2="16" y2="12"></line>
            </svg>
            <h3
              class="text-2xl font-bold"
              style={{ color: colors.primaryC.yellow }}
            >
              {informacion.descripcion[1].title}
            </h3>
          </div>
          <p
            class="text-base leading-relaxed"
            style={{ color: colors.neutralC.white }}
            set:html={informacion.descripcion[1].descripcion}
          />
        </div>
      </div>
    </div>

    {/* Columna de Valores y Misión */}
    <div class="space-y-6">
      {/* Misión */}
      <div
        class="p-6 rounded-xl flex items-start space-x-4"
        style={{
          backgroundColor: colors.secondaryC.gray,
        }}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          width="72"
          height="72"
          stroke-width="2"
          class="text-primaryC-yellow"
        >
          <path d="M12 12m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
          <path d="M12 12m-5 0a5 5 0 1 0 10 0a5 5 0 1 0 -10 0"></path>
          <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path>
        </svg>
        <div>
          <h3
            class="text-2xl font-bold mb-2"
            style={{ color: colors.neutralC.white }}
          >
            {lang === "es" ? "Nuestra Misión" : "Our Mission"}
          </h3>
          <p style={{ color: colors.neutralC.white }}>
            {mision}
          </p>
        </div>
      </div>

      {/* Visión */}
      <div
        class="p-6 rounded-xl flex items-start space-x-4"
        style={{
          backgroundColor: colors.secondaryC.gray,
        }}
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          width="72"
          height="72"
          stroke-width="2"
          class="text-primaryC-yellow"
        >
          <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
          <path d="M3.6 9h16.8"></path>
          <path d="M3.6 15h16.8"></path>
          <path d="M11.5 3a17 17 0 0 0 0 18"></path>
          <path d="M12.5 3a17 17 0 0 1 0 18"></path>
        </svg>
        <div>
          <h3
            class="text-2xl font-bold mb-2"
            style={{ color: colors.neutralC.white }}
          >
            {lang === "es" ? "Nuestra Visión" : "Our Vision"}
          </h3>
          <p style={{ color: colors.neutralC.white }}>
            {vision}
          </p>
        </div>
      </div>

      {/* Valores */}
      <div
        class="p-6 rounded-xl"
        style={{
          backgroundColor: colors.secondaryC.gray,
        }}
      >
        <h3
          class="text-2xl font-bold mb-4 text-center"
          style={{ color: colors.neutralC.white }}
        >
          Nuestros Valores
        </h3>
        <div class="grid md:grid-cols-2 gap-4">
          {
            valores.map((valor, _) => (
              <div
                class="flex items-center space-x-2 p-2 rounded"
                style={{
                  backgroundColor: colors.primaryC.black,
                  color: colors.primaryC.yellow,
                }}
              >
                <Fragment set:html={valor.icon} />
                <span>{valor.label}</span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</div>
